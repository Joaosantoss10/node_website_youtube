<body class="login-main-body">
   <section class="login-main-wrapper">
      <div class="container-fluid pl-0 pr-0">
         <div class="row no-gutters">
            <div class="col-md-5 p-5 bg-white full-height">
               <div class="login-main-left">
                  <div class="text-center mb-5 login-main-left-header pt-4">
                     <img src="public/img/logo.png" class="img-fluid" alt="LOGO">
                     <h5 class="mt-3 mb-3">Bem-Vindo ao ISLÃO</h5>
                     <p>Faz Upload aos teus <br> Vídeos Favoritos!</p>
                  </div>

                  <!-- Mensagem de Sucesso -->
                  <% if (message !="" ) { %>
                     <div class="alert alert-success">
                        <%= message %>
                     </div>
                     <% } %>
                     
                        <!-- Mensagem de Erro -->
                        <% if (error !="" ) { %>
                           <div class="alert alert-danger">
                              <%= error %>
                           </div>
                           <% } %>
                              <!-- Formulário -->
                              <form action="/register" method="POST">
                                 <div class="row">
                                    <div class="form-group col-md-6">
                                       <label>Nome</label>
                                       <input type="text" class="form-control" name="first_name" id="first_name">
                                    </div>

                                    <div class="form-group col-md-6">
                                       <label>Apelido</label>
                                       <input type="text" class="form-control" name="last_name" id="last_name">
                                    </div>
                                 </div>

                                 <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" class="form-control" name="email" id="email">
                                 </div>

                                 <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" class="form-control" name="password" id="password">
                                 </div>

                                 <div class="mt-4">
                                    <p class="text-danger" id="error"></p>
                                    <p class="text-success" id="success"></p>

                                    <button type="submit" class="btn btn-outline-primary btn-block btn-lg">Registar</button>
                                 </div>
                              </form>
                              <div class="text-center mt-5">
                                 <p class="light-gray">Já tem uma Conta? <a href="/login">Entrar</a></p>
                              </div>
               </div>
            </div>

            <!--Carrossel-->
            <div class="col-md-7">
               <div class="login-main-right bg-white p-5 mt-5 mb-5">
                  <div class="owl-carousel owl-carousel-login">
                     <div class="item">
                        <div class="carousel-login-card text-center">
                           <img src="public/img/play.png" class="img-fluid" alt="LOGO">
                           <h5 class="mt-5 mb-3">ISLÃO</h5>
                           <p class="mb-4">Texto Texto Texto Texto Texto Texto Texto <br> Texto Texto Texto Texto Texto <br> Texto Texto Texto </p>
                        </div>
                     </div>
                     <div class="item">
                        <div class="carousel-login-card text-center">
                           <img src="public/img/login.png" class="img-fluid" alt="LOGO">
                           <h5 class="mt-5 mb-3">ISLÃO</h5>
                           <p class="mb-4">Texto Texto Texto Texto Texto Texto Texto <br> Texto Texto Texto Texto Texto <br> Texto Texto Texto </p>
                        </div>
                     </div>
                     <div class="item">
                        <div class="carousel-login-card text-center">
                           <img src="public/img/download.png" class="img-fluid" alt="LOGO">
                           <h5 class="mt-5 mb-3">ISLÃO</h5>
                           <p class="mb-4">Texto Texto Texto Texto Texto Texto Texto <br> Texto Texto Texto Texto Texto <br> Texto Texto Texto </p>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </section>
   <!-- Bootstrap core JavaScript-->
   <script src="public/vendor/jquery/jquery.min.js"></script>
   <script src="public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
   <!-- Core plugin JavaScript-->
   <script src="public/vendor/jquery-easing/jquery.easing.min.js"></script>
   <!-- Owl Carousel -->
   <script src="public/vendor/owl-carousel/owl.carousel.js"></script>
   <!-- Custom scripts for all pages-->
   <script src="public/js/custom.js"></script>
</body>

</html>